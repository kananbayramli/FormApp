@model Product

@{
    ViewData["Title"] = "Create Product";
}


<form asp-Controller="Home" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control">
        <span style="color: red;" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control">
        <span style="color: red;" asp-validation-for="Price"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Image" class="form-label"></label>
        <input asp-for="Image" class="form-control">
        <span style="color: red;" asp-validation-for="Image"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option value="">Sec</option>            
        </select>
        <span style="color: red;" asp-validation-for="CategoryId"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsActive" class="form-check-input">
        <label asp-for="IsActive" class="form-check-label"></label>
        <span style="color: red;" asp-validation-for="IsActive"></span>
    </div>

    <button type="submit" class="btn btn-warning">Qeyd et</button>
</form>
